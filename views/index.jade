extends layout

block content
	.top
		header
			h1 dandydomains
			p.built-by
					| Built by 
					a(href='http://github.com/zaccolley/dandydomains') Zac &amp; Peter
		.filters

			section
				h2 Domain:
				select.filter.domain-filter
					option(value='none') --
					-for(var d = 0; d < tlds.length; d++)
						-var tld = tlds[d];
						option(value='.'+tld)= '.'+tld

			section
				h2 Sort:

				select.filter.sort-filter
					option(value='rand') Random
					option(value='asc') A-Z
					option(value='desc') Z-A

			section
				h2 Search:
				input.filter.text-filter(type='text', placeholder='arandomdoma.in')
				p.amount
					.more-detail.more-detail-hidden

						.button.close Close

						h1
						p.loading
							| Information loading
							span.loading-ellipsis ...
						
						p.errors
						p.availability
						p.suffix

	main
		ul
			-for(var d = 0; d < 500; d++)
				-var rand = Math.floor((Math.random() * domains.length)+1);
				-var domain = domains[rand];
				li
					h1= domain

