extends layout

block content
     .top
          header
               h1 dandydomains
               p Words that are domains and stuff.
               p.built-by
                    | Built by 
                    a(href='http://github.com/zaccolley/dandydomains') Zac &amp; Peter
          .filters
               h2 Filters:
               input.filter.text-filter(type='text', placeholder='--')
               select.filter.domain-filter
                    option(value='none') --
                    -for(var d = 0; d < tlds.length; d++)
                         -var tld = tlds[d];
                         option(value='.'+tld)= '.'+tld
               select.filter.sort-filter
                    option(value='rand') Random
                    option(value='asc') A-Z
                    option(value='desc') Z-A
               p.amount
                    .more-detail
                         .button.close X
                         .button.define Define word
                         .url
     main
          ul
               -for(var d = 0; d < tlds.length; d++)
                    -var tld = tlds[d];
                    li
                         h1= tld
