extends layout

block content
   .top
      header
        h1 dandydomains
        p Words that are domains and stuff.
        p.built-by
          | Built by
          a(href='http://github.com/zaccolley/dandydomains') Zac &amp; Peter
      .filters
        h2 Filters&colon;
        input.filter.text-filter(type='text', placeholder='--')
        select.filter.domain-filter
          option(label='', value='none') --
          -for(var d = 0; d < tlds.length; d++)
               -var tld = tlds[d];
               option(label=tld, value='.'+tld) tld
        select.filter.sort-filter
          option(value='rand') Random
          option(value='asc') A-Z
          option(value='desc') Z-A
        p.amount
      .more-detail
        .button.close X
        .button.define Define word
        .url
        h1
        p.loading
          | Information loading
          span.loading-ellipsis &period;&period;&period;
        p.errors
        p.availability
        p.suffix
        p.definition
    main
      ul
        // DOMAINS GO HERE
    h1.big-error No domains found! :)
    script(src='http://code.jquery.com/jquery-1.9.1.min.js')
    script(type='text/javascript', src='js/scripts.min.js')
